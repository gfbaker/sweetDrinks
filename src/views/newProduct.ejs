<!DOCTYPE html>
<html lang="en">

    <!-- HEAD -->
    <%- include('./partials/head',{title:"Producto Nuevo"}) %>
    <!-- FIN-HEAD -->

<body class="body">

        <!-- HEADER -->
        <%- include('./partials/header') %>
        <!-- FIN DEL HEADER -->

    <!-- MAIN -->
    <main class="mainProducto-nuevo">
        <form class="form-ProductoNuevo" method="POST" enctype="multipart/form-data">
            <section>
                <div class="div-ProductoNuevo">
                    <label class="label-ProductoNuevo">Nombre del Producto:</label>
                    <input type="text" name="nombre" class="div-ProductoNuevo" required="required" minlength="4">
                </div>
                <div class="div-ProductoNuevo">
                    <label class="label-ProductoNuevo">Precio:</label>
                    <input type="number" name="precio" class="div-ProductoNuevo" required="required" minlength="4">
                </div>
                <div class="div-ProductoNuevo">
                    <label class="label-ProductoNuevo">Porcentaje de Alcohol: </label>
                    <input type="number" name="porcentajeAlcohol" class="div-ProductoNuevo" required="required">
                </div> 
                <div class="div-ProductoNuevo">
                    <label class="label-ProductoNuevo">Volumen del envase: </label>
                    <input type="text" name="volumen" class="div-ProductoNuevo" required="required">
                </div> 
                <div class="div-ProductoNuevo">
                    <label class="label-ProductoNuevo">Descripcion: </label>
                    <input type="text" name="descripcion" class="div-ProductoNuevo" required="required" minlength="4">
                </div>
                <div class="div-ProductoNuevo">
                    <label for= "imagenes" class="label-ProductoNuevo">Imagenes: </label>
                    <input type="file" name="imagenes" class="div-ProductoNuevo" required="required">
                </div>
                <div class="div-ProductoNuevo">
                    <label class="label-ProductoNuevo">Stock: </label>
                    <input type="number" name="stock" class="div-ProductoNuevo" required="required">
                </div> 
                <div class="div-ProductoNuevo">
                    <label class="label-ProductoNuevo">Descuento: </label>
                    <input type="number" name="descuento" class="div-ProductoNuevo" required="required">
                </div> 
                <div class="div-ProductoNuevo">
                    <div>
                    <label for="seccion">Oferta</label>
                    <input type="checkbox" id="oferta" name="oferta" >            
                    </div>
                    <div>
                    <label for="seccion2">Importado</label>
                    <input type="checkbox" id="importado" name="importado" >
                    </div>
                    <div>
                    <label for="seccion3">Pack</label>         
                    <input type="checkbox" id="pack" name="esPack" >
                    </div>
                </div> 
                <div class="div-ProductoNuevo">
                    <div>
                    <label for="categoria">Cervezas</label>
                    <input type="checkbox" id="categoria" name="categoria" value="Cervezas">            
                    </div>
                    <div>
                    <label for="categoria2">Aperitivos</label>
                    <input type="checkbox" id="categoria2" name="categoria" value="Aperitivos">
                    </div>
                    <div>
                    <label for="categoria3">Whiskies</label>         
                    <input type="checkbox" id="categoria3" name="categoria" value="Whiskies">
                    </div>
                </div> 
                <br>
                <div class="div-ProductoNuevo">
                    <button type="submit" value="enviar" class="boton-formularios">Enviar</button>
                    <button type="reset" value="borrar" class="boton-formularios">Borrar</button>               
                </div>
            </section>

        </form>
    </main>
    <!-- FIN-MAIN -->
    <!----- FOOTER ----->
    <%- include('./partials/footer') %>
    <!----- FIN-FOOTER ----->

    </body> 
</html>